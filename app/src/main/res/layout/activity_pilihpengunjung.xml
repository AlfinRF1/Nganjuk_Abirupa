<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/ivBackDialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back"
            android:contentDescription="Kembali"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pilih Pengunjung"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#000000" />

        <View
            android:layout_width="24dp"
            android:layout_height="1dp"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dewasa"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 tahun ke atas"
                android:textSize="12sp"
                android:textColor="#757575" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnMinDewasa"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/minus_bg"
                android:src="@drawable/ic_minus"
                android:contentDescription="Kurangi Dewasa" />

            <TextView
                android:id="@+id/tvCountDewasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingHorizontal="12dp"
                android:minWidth="30dp"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btnPlusDewasa"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/plus_bg"
                android:src="@drawable/ic_plus"
                android:contentDescription="Tambah Dewasa" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anak Anak"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anak dibawah 10 tahun"
                android:textSize="12sp"
                android:textColor="#757575" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnMinAnak"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/minus_bg"
                android:src="@drawable/ic_minus"
                android:contentDescription="Kurangi Anak" />

            <TextView
                android:id="@+id/tvCountAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingHorizontal="12dp"
                android:minWidth="30dp"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btnPlusAnak"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/plus_bg"
                android:src="@drawable/ic_plus"
                android:contentDescription="Tambah Anak" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F0F8FF"
        android:padding="12dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                android:tint="#1E90FF"
                android:contentDescription="Informasi"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketentuan Pemesanan Tiket"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ketentuan_pemesanan"
            android:textColor="#444444"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSimpanPengunjung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#03B6A7"
        android:padding="14dp" />

</LinearLayout>