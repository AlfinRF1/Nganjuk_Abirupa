<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnPesan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Celah atas supaya header tidak tertutup -->
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp" />

            <!-- Gambar Wisata -->
            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/image_rounded"
                android:clipToOutline="true"
                android:src="@drawable/default_wisata" />

            <!-- Card Detail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp">

                <!-- Judul Wisata -->
                <TextView
                    android:id="@+id/tvNamaWisata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goa Margo Tresno"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000" />

                <!-- Lokasi -->
                <TextView
                    android:id="@+id/tvLokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hutan, Ngluyu, Kec. Ngluyu, Kabupaten Nganjuk, Jawa Timur 64452"
                    android:textColor="#555" />

                <!-- Deskripsi Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Deskripsi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <!-- Deskripsi -->
                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Goa Margo Tresno adalah destinasi wisata alam yang menyimpan kisah cinta legendaris. Terletak di kawasan pegunungan yang sejuk, goa ini menawarkan suasana mistis dan romantis, cocok untuk wisata sejarah dan healing."
                    android:textColor="#555" />

                <!-- Tiket Masuk -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Tiket Masuk"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvHargaTiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Dewasa : 9.000\nAnak-anak : 7.000"
                    android:textColor="#555" />

                <!-- Fasilitas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Fasilitas"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvFasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Parkir, Warung Makan, Toilet, Spot Foto, Pendopo, Mushola, Jalur tracking"
                    android:textColor="#555" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Pesan -->
    <Button
        android:id="@+id/btnPesan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Pesan sekarang"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:backgroundTint="#0BB5A7"
        android:layout_margin="16dp" />

    <!-- Tombol Kembali (Back) di atas semua layout -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_circle_white"
        android:src="@drawable/arrow_back"
        android:scaleType="centerInside"
        app:tint="#009688"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"/>
</RelativeLayout>
