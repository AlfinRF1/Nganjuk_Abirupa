<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Header dengan background rounded top -->
<FrameLayout
android:id="@+id/header"
android:layout_width="match_parent"
android:layout_height="150dp"
    android:background="@drawable/header_rounded"
    android:elevation="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Logo & Welcome Text -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="16dp">

<ImageView
    android:id="@+id/logoImage"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/logo_nganjuk_abirupa"
    android:contentDescription="Logo Nganjuk Abirupa"
    android:importantForAccessibility="no" />

<TextView
    android:id="@+id/tvWelcome"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Selamat Datang, Nandar!"
    android:textSize="16sp"
    android:textStyle="bold"
    android:fontFamily="@font/tilt_warp"
    android:textColor="#FFFFFF"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="8dp" />
</LinearLayout>

    <!-- Search Bar (di tengah header) -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="52dp"
android:background="@drawable/search_bar_background"
android:orientation="horizontal"
android:paddingStart="16dp"
android:paddingEnd="16dp"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
android:layout_marginTop="80dp"
    android:elevation="4dp"
    android:gravity="center_vertical">

<ImageView
android:layout_width="20dp"
android:layout_height="20dp"
android:src="@drawable/ic_search"
android:contentDescription="Search"
android:layout_marginEnd="8dp" />

    <!-- Search Bar (di tengah header) -->
    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/search_bar_background"
        android:queryHint="Mau Liburan Kemana?"
        android:iconifiedByDefault="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"
        android:elevation="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />
    </LinearLayout>
    </FrameLayout>

    <!-- Main Content (Scrollable) -->
<androidx.core.widget.NestedScrollView
android:layout_width="match_parent"
android:layout_height="0dp"
android:fillViewport="true"
app:layout_constraintTop_toBottomOf="@id/header"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintBottom_toTopOf="@id/footer">

<!-- Destinasi Wisata Terkini -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvSectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destinasi Wisata Terkini"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Card 1: Air Terjun Sedudo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wisata_air_terjun_sedudo"
            android:contentDescription="Air Terjun Sedudo"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvWisataName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Terjun Sedudo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvWisataLocation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desa Ngliman, Kec Sawahan, Kab Nganjuk"
            android:textSize="12sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#4E4E4E"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDetail1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Selengkapnya"
            android:textSize="10sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="@android:color/white"
            android:backgroundTint="#2E9FA6"
            android:layout_gravity="end"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <!-- Card 2: Roro Kuning & Situs Jendral Sudirman -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wisata_roro_kuning"
            android:contentDescription="Roro Kuning &amp; Situs Jendral Sudirman"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvWisataName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roro Kuning &amp; Situs Jendral Sudirman"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvWisataLocation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desa Bajulan, Kec Loceret, Kab Nganjuk"
            android:textSize="12sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#4E4E4E"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDetail2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Selengkapnya"
            android:textSize="10sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="@android:color/white"
            android:backgroundTint="#2E9FA6"
            android:layout_gravity="end"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <!-- Card 3: Taman Rekreasi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wisata_goa_margotresno"
            android:contentDescription="Taman Rekreasi"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvWisataName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goa Margo Tresno"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvWisataLocation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desa Sugihwaras, Kec Ngluyu, Kab Nganjuk"
            android:textSize="12sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#4E4E4E"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDetail3"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Selengkapnya"
            android:textSize="10sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="@android:color/white"
            android:backgroundTint="#2E9FA6"
            android:layout_gravity="end"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <!-- Card 4: Museum -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wisata_sritanjung"
            android:contentDescription="Museum"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvWisataName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sri Tanjung Wisata Tirta"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvWisataLocation4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desa Tanjungrejo, Kec Loceret, Kab Nganjuk"
            android:textSize="12sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#4E4E4E"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDetail4"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Selengkapnya"
            android:textSize="10sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="@android:color/white"
            android:backgroundTint="#2E9FA6"
            android:layout_gravity="end"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <!-- Card 5: Pantai -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wisata_tral"
            android:contentDescription="Pantai"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvWisataName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taman Rekreasi Anjuk Ladang"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvWisataLocation5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kel Ploso, Kota Nganjuk, Kab Nganjuk"
            android:textSize="12sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#4E4E4E"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDetail5"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Selengkapnya"
            android:textSize="10sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="@android:color/white"
            android:backgroundTint="#2E9FA6"
            android:layout_gravity="end"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:stateListAnimator="@null" />
    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>

    <!-- Footer Navigation -->
<LinearLayout
android:id="@+id/footer"
android:layout_width="match_parent"
android:layout_height="60dp"
android:background="#FFFFFF"
android:orientation="horizontal"
android:elevation="8dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<!-- Home -->
<LinearLayout
    android:id="@+id/navHome"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_home"
        android:contentDescription="Home"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="10sp"
        android:textStyle="bold"
        android:fontFamily="@font/tilt_warp"
        android:textColor="#2E9FA6" />
</LinearLayout>

<!-- Riwayat -->
<LinearLayout
    android:id="@+id/navRiwayat"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_history"
        android:contentDescription="Riwayat"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat"
        android:textSize="10sp"
        android:textStyle="bold"
        android:fontFamily="@font/tilt_warp"
        android:textColor="#4E4E4E" />
</LinearLayout>

<!-- Profile -->
<LinearLayout
    android:id="@+id/navProfile"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="Profile"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="10sp"
        android:textStyle="bold"
        android:fontFamily="@font/tilt_warp"
        android:textColor="#4E4E4E" />
</LinearLayout>
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>