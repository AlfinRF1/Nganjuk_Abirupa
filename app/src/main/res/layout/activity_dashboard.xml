<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F8"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="139dp"
        android:background="@drawable/header_rounded"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="121dp"
                android:layout_height="46dp"
                android:contentDescription="Logo Nganjuk Abirupa"
                android:importantForAccessibility="no"
                android:scaleType="fitStart"
                android:src="@drawable/logotextputih" />

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="10dp"
                android:text="Selamat Datang, Nama Kamu!"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Selamat Datang, Nama Kamu!" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="375dp"
            android:layout_height="49dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/search_bar_background"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Search"
                android:src="@drawable/ic_search"
                app:tint="#808080" />

            <TextView
                android:id="@+id/searchHintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Mau Liburan Kemana?"
                android:textColor="#808080"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingTop="20dp"
                android:text="Destinasi Wisata Terkini"
                android:textColor="#4e4e4e"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardWisata1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="8dp"
                        android:background="#ffffff"
                        android:contentDescription="Air Terjun Sedudo"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wisata_air_terjun_sedudo" />

                    <TextView
                        android:id="@+id/tvWisataName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Air Terjun Sedudo"
                        android:textColor="#4e4e4e"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWisataLocation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Desa Ngliman, Kec Sawahan, Kab Nganjuk"
                        android:textColor="#818181"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnDetail1"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/gradientMiddle"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:cornerRadius="8dp"

                        android:text="Selengkapnya"
                        android:textColor="#ffffff"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardWisata2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="8dp"
                        android:background="#ffffff"
                        android:contentDescription="Roro Kuning dan Situs Jendral Sudirman"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wisata_roro_kuning" />

                    <TextView
                        android:id="@+id/tvWisataName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Roro Kuning dan Situs Jendral Sudirman"
                        android:textColor="#4e4e4e"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWisataLocation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Desa Bajulan, Kec Loceret, Kab Nganjuk"
                        android:textColor="#818181"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnDetail2"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Selengkapnya"
                        android:textColor="#ffffff"
                        android:textSize="11sp"
                        android:backgroundTint="@color/gradientMiddle"
                        app:cornerRadius="8dp"

                         />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardWisata3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="8dp"
                        android:background="#ffffff"
                        android:contentDescription="Goa Margotresno"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wisata_goa_margotresno" />

                    <TextView
                        android:id="@+id/tvWisataName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Goa Margotresno"
                        android:textColor="#4e4e4e"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWisataLocation3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Desa Sugihwaras, Kec Ngluyu, Kab Nganjuk"
                        android:textColor="#818181"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnDetail3"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Selengkapnya"
                        android:textColor="#ffffff"
                        android:textSize="11sp"
                        android:backgroundTint="@color/gradientMiddle"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardWisata4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="8dp"
                        android:background="#ffffff"
                        android:contentDescription="Kolam Renang Sri Tanjung"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wisata_sritanjung" />

                    <TextView
                        android:id="@+id/tvWisataName4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Kolam Renang Sri Tanjung"
                        android:textColor="#4e4e4e"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWisataLocation4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Jl. Dieng, Tanjungrejo, Kec Loceret, Kab Nganjuk"
                        android:textColor="#818181"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnDetail4"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Selengkapnya"
                        android:textColor="#ffffff"
                        android:textSize="11sp"
                        android:backgroundTint="@color/gradientMiddle"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardWisata5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="8dp"
                        android:background="#ffffff"
                        android:contentDescription="Taman Rekreasi Anjuk Ladang"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wisata_tral" />

                    <TextView
                        android:id="@+id/tvWisataName5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Taman Rekreasi Anjuk Ladang"
                        android:textColor="#4e4e4e"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWisataLocation5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Jl.Anjuk Ladang, Kel Ploso, Kota Nganjuk"
                        android:textColor="#818181"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btnDetail5"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Selengkapnya"
                        android:textColor="#ffffff"
                        android:textSize="11sp"
                        android:backgroundTint="@color/gradientMiddle"
                        app:cornerRadius="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_dashboard"
                android:contentDescription="Home"
                android:layout_marginBottom="2dp"
                app:tint="#2E9FA6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#2E9FA6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navRiwayat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                android:contentDescription="Riwayat"
                android:layout_marginBottom="2dp"
                app:tint="#808080" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Riwayat"
                android:textSize="10sp"
                android:textStyle="normal"
                android:textColor="#808080" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"
                android:layout_marginBottom="2dp"
                app:tint="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="10sp"
                android:textStyle="normal"
                android:textColor="#808080" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>