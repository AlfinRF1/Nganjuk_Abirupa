<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <View
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnPesan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tombol Back -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/arrow_back"
                android:scaleType="centerInside"
                app:tint="#009688" />

            <!-- Gambar Header -->
            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="16dp"
                android:adjustViewBounds="true"
                android:background="@drawable/image_rounded"
                android:scaleType="centerCrop"
                android:src="@drawable/default_wisata"
                android:clipToOutline="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp">

                <!-- Nama Wisata -->
                <TextView
                    android:id="@+id/tvNamaWisata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sri Tanjung Wisata Tirta"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000" />

                <!-- Lokasi -->
                <TextView
                    android:id="@+id/tvLokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Jl. Dieng, Kramat, Tanjungrejo, Kec. Loceret, Kabupaten Nganjuk, Jawa Timur 64471"
                    android:textColor="#555" />

                <!-- Deskripsi Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Deskripsi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <!-- Deskripsi -->
                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Sri Tanjung Wisata Tirta adalah destinasi wisata air yang cocok untuk keluarga. Menyediakan kolam renang anak dan dewasa, taman bermain. Tempat ini menjadi favorit warga lokal untuk rekreasi akhir pekan."
                    android:textColor="#555" />

                <!-- Tiket Masuk -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Tiket Masuk"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvHargaTiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Dewasa : 10.000&#10;Anak-anak : 7.000"
                    android:textColor="#555" />

                <!-- Fasilitas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Fasilitas"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvFasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Kolam renang dewasa, Kolam anak, Taman bermain, Warung makan, Toilet, Mushola, Parkir luas, Gazebo"
                    android:textColor="#555" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Pesan -->
    <Button
        android:id="@+id/btnPesan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Pesan sekarang"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:backgroundTint="#0BB5A7"
        android:layout_margin="16dp" />

</RelativeLayout>
