<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header Putih (hanya untuk judul & back arrow) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/arrow_back"
            android:contentDescription="Back"
            android:importantForAccessibility="no"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:tint="@color/gradientMiddle" />

        <!-- Judul Daftar Akun -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Daftar Akun"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Space di kanan -->
        <View
            android:layout_width="24dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Frame Input (abu-abu muda, mulai dari bawah header) -->
    <LinearLayout
        android:id="@+id/registerFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <!-- Judul Form -->
    <TextView
        android:id="@+id/tvFormTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Akun Nganjuk Abirupa!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Deskripsi kecil -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar akun Nganjuk Abirupa untuk menikmati semua layanan dan fitur di Nganjuk Abirupa"
        android:textSize="10sp"
        android:textStyle="normal"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#4E4E4E"
        android:layout_marginBottom="24dp" />

    <!-- Nama Lengkap -->
    <TextView
        android:id="@+id/tvLabelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#4E4E4E"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint=""
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/tilt_warp"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"
        android:autofillHints="name"
        android:layout_marginBottom="16dp" />

    <!-- Alamat Email -->
    <TextView
        android:id="@+id/tvLabelEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat Email"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#4E4E4E"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint=""
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/tilt_warp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:autofillHints="emailAddress"
        android:layout_marginBottom="16dp" />

    <!-- No.Telp -->
    <TextView
        android:id="@+id/tvLabelPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No.Telp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#4E4E4E"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint=""
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/tilt_warp"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:autofillHints="phone"
        android:layout_marginBottom="16dp" />

    <!-- Kata Sandi -->
    <TextView
        android:id="@+id/tvLabelPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kata Sandi"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#4E4E4E"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint=""
        android:inputType="textPassword"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/tilt_warp"
        android:imeOptions="actionNext"
        android:autofillHints="password"
        android:layout_marginBottom="16dp" />

    <!-- Konfirmasi Kata Sandi -->
    <TextView
        android:id="@+id/tvLabelConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Kata Sandi"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#4E4E4E"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint=""
        android:inputType="textPassword"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/tilt_warp"
        android:imeOptions="actionDone"
        android:autofillHints="password"
        android:layout_marginBottom="24dp" />

    <!-- Tombol Buat Akun -->
    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gradientMiddle"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="12dp"
        android:text="Buat Akun"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
       />

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>