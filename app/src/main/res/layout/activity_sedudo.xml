<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- Tombol back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_circle_white"
        android:src="@drawable/arrow_back"
        android:scaleType="centerInside"
        app:tint="#009688" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnPesan">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CELAH DI ATAS GAMBAR -->


            <!-- Gambar Header DIPERKECIL -->
            <View
                android:layout_width="match_parent"
                android:layout_height="69dp" />
            <!-- CARD DETAIL -->
            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/wisata_air_terjun_sedudo"
                android:background="@drawable/image_rounded"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp">

                <!-- Judul -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air terjun Sedudo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000" />

                <!-- Lokasi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Desa Ngliman, Kec. Sawahan, Nganjuk"
                    android:textColor="#555" />

                <!-- Deskripsi Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Deskripsi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <!-- Deskripsi -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Boleh disebut sebagai Ikon Wisata di Gunung Wilis. Tak heran nama Sedudo menjadi identik sekali dengan Nganjuk. Menjulang setinggi Â±105m, berada ditengah tebing, dengan udara yang sangat sejuk tentu membuat sobat wisata betah berendam disini."
                    android:textColor="#555" />

                <!-- Tiket Masuk -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Tiket Masuk"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Dewasa : 10.000\nAnak-anak <10th : 8.000"
                    android:textColor="#555" />

                <!-- Fasilitas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Fasilitas"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Warung Makan, Parkir, Toilet, Kamar bilas, Kolam buatan, Anjungan, Pendopo, Kios souvenir, dan Mushola"
                    android:textColor="#555" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Pesan Sekarang -->
    <Button
        android:id="@+id/btnPesan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Pesan sekarang"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:backgroundTint="#0BB5A7"
        android:layout_margin="16dp" />

</RelativeLayout>
