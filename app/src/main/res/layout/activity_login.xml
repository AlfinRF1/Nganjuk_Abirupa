<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Logo Nganjuk di atas frame -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="208dp"
        android:layout_height="195dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo Nganjuk Abirupa"
        android:src="@drawable/logo_nganjuk_abirupa" />

    <!-- Frame putih setengah layar dengan sudut atas melengkung -->
    <LinearLayout
        android:id="@+id/loginFrame"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/frame_rounded_top"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <!-- Garis dekoratif -->
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginHorizontal="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/garis_dekoratif" />

        <!-- Judul Login -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:gravity="center"
            android:textColor="@color/gradientMiddle"
            android:layout_marginBottom="24dp" />

        <!-- Input Nama Pengguna -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pengguna"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/tilt_warp"
            android:layout_marginBottom="12dp" />

        <!-- Input Kata Sandi -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/tilt_warp"
            android:layout_marginBottom="12dp" />

        <!-- Link Lupa Kata Sandi -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa kata sandi?"
            android:textColor="@color/gradientEnd"
            android:textSize="14sp"
            android:fontFamily="@font/tilt_warp"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp" />

        <!-- Tombol Login -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="@color/gradientMiddle"
            android:textColor="@android:color/white"
            android:fontFamily="@font/tilt_warp"
            android:layout_marginBottom="16dp" />

        <!-- Link Registrasi -->
        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum memiliki akun? Registrasi"
            android:textColor="@color/gradientEnd"
            android:textSize="14sp"
            android:fontFamily="@font/tilt_warp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</RelativeLayout>