<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Logo Nganjuk -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo Nganjuk Abirupa"
        android:src="@drawable/logo_nganjuk_abirupa"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp" />

    <!-- Frame Putih -->
    <LinearLayout
        android:id="@+id/loginFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/frame_rounded_top"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp">

        <!-- Space di atas -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" /> <!-- Dikurangi sedikit biar tidak terlalu turun -->

        <!-- Judul Selamat Datang -->
        <TextView
            android:id="@+id/tvWelcomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="@color/gradientStart"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvWelcomeSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Di Nganjuk Abirupa !"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="@color/gradientStart"
            android:layout_marginBottom="20dp" />

        <!-- Deskripsi kecil -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login atau Register sekarang! untuk menikmati semua fitur yang tersedia di Nganjuk Abirupa"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#4E4E4E"
            android:layout_marginBottom="24dp" />

        <!-- Label Nama Pengguna -->
        <TextView
            android:id="@+id/tvLabelUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#4E4E4E"
            android:layout_marginBottom="6dp" />

        <!-- Input Nama Pengguna -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint=""
            android:background="@drawable/edittext_background"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/tilt_warp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:autofillHints="username"
            android:layout_marginBottom="16dp" />

        <!-- Label Kata Sandi -->
        <TextView
            android:id="@+id/tvLabelPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kata Sandi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:textColor="#4E4E4E"
            android:layout_marginBottom="6dp" />

        <!-- Input Kata Sandi -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint=""
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/tilt_warp"
            android:imeOptions="actionDone"
            android:autofillHints="password"
            android:layout_marginBottom="20dp" />

        <!-- Link Lupa Kata Sandi -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa kata sandi?"
            android:textColor="@color/gradientEnd"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Login"
            android:textSize="22sp"
            android:fontFamily="@font/tilt_warp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/gradientMiddle"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp" />

        <!-- Google Sign-In Button -->
        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleSignInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Link Registrasi -->
        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum memiliki akun? Registrasi"
            android:textColor="@color/gradientEnd"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/tilt_warp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>