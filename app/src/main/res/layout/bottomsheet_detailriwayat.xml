<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    app:cardCornerRadius="32dp"
    app:cardElevation="14dp">

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <!-- HEADER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_app_logo"
                    android:layout_width="107dp"
                    android:layout_height="39dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_nganjuk_abirupa"
                    app:tint="#000" />
            </RelativeLayout>

            <!-- TITLE SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_history_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Pembelian Tiket"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#4e4e4e"
                    android:textSize="22sp"/>
            </LinearLayout>

            <!-- INFORMASI WISATA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="#FAFAFA">

                <TextView
                    android:id="@+id/tv_wisata_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Terjun Sedudo"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#4e4e4e"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_wisata_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desa Ngliman, Kec. Sawahan, Nganjuk"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#818181"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- DETAIL TRANSAKSI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <!-- ID TRANSAKSI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ID Transaksi"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_transaction_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#TX6415481554516"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- TANGGAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tanggal"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_transaction_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Okt 2025"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- STATUS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/tv_status_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:textColor="#4e4e4e"/>

                    <TextView
                        android:id="@+id/tv_transaction_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berhasil"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:textColor="#00A84F"/>
                </LinearLayout>

                <!-- METODE PEMBAYARAN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Metode Pembayaran"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qris"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- TOTAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_transaction_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 50.000,00"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- BARCODE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#F8F8F8"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/iv_barcode_image"
                    android:layout_width="280dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/barcode_panjang"/>

                <TextView
                    android:id="@+id/tv_barcode_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 5 8 6 2 1 4 5 2 4 1"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#4e4e4e"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- FOOTER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="30dp">

                <ImageView
                    android:id="@+id/iv_porabudpar_logo"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:src="@drawable/dispora_logo"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Ketentuan :"
                        android:textColor="#4e4e4e"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Tunjukkan ini saat masuk"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Tiket tidak dapat dikembalikan"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>
