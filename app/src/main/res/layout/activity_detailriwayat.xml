<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_main_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"  app:cardElevation="8dp"      app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:paddingBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_back_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/arrow_back"  android:contentDescription="Kembali"
                    app:tint="@android:color/black" />

                <ImageView
                    android:id="@+id/iv_app_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo_nganjuk_abirupa"  android:contentDescription="Nganjuk Abirupa Logo"
                    android:adjustViewBounds="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_history_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Pembelian Tiket"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#4e4e4e"
                    android:textSize="25sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="#FAFAFA">

                <TextView
                    android:id="@+id/tv_wisata_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Terjun Sedudo"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#4e4e4e"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_wisata_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desa Ngliman, Kec. Sawahan, Nganjuk"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#818181"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ID Transaksi"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_transaction_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#TX6415481554516"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tanggal"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_transaction_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Okt 2025"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_transaction_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berhasil"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/gradientMiddle"  android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Metode Pembayaran"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qris"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_transaction_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 50.000,00"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#4e4e4e"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:background="#F8F8F8">

                <ImageView
                    android:id="@+id/iv_barcode_image"
                    android:layout_width="291dp"
                    android:layout_height="80dp"
                    android:contentDescription="Barcode Tiket"
                    android:scaleType="fitXY"
                    android:src="@drawable/barcode_panjang" />

                <TextView
                    android:id="@+id/tv_barcode_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2  5  8  6  2  1  4  5  2  4  1"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#4e4e4e"
                    android:textSize="20sp"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/iv_porabudpar_logo"
                    android:layout_width="109dp"
                    android:layout_height="67dp"
                    android:layout_alignParentStart="true"

                    android:layout_marginStart="0dp"
                    android:contentDescription="Dinas PORABUDPAR Logo"
                    android:src="@drawable/dispora_logo" />

                <LinearLayout
                    android:id="@+id/ll_ketentuan_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ketentuan :"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#818181"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-Tunjukkan ini saat masuk"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#818181"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-Tiket tidak dapat dikembalikan"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#818181"
                        android:textSize="12sp"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>